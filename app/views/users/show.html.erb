<div class="container">	
	<div class="row">
	  	<div class="col-md-2">
	  		<%= image_tag @user.avatar.url.to_s, :class => "round" %>
	  	</div>
		<div class="col-md-6">
			<h1><%= @user.first_name %> <%= @user.last_name %></h1>
			<% if @user.id = current_user.id %>
				<%= link_to "Edit profile", edit_user_path(current_user.id), class: "btn btn-warning" %>
			<% end %>
		</div>
		<div class="col-md-4">
		<h2>My listings</h2>
		<% current_user.listings.each do |listing| %>
		<%= link_to "#{listing.title}", listing %><br>
		<% end %>
		<h2>My reservations</h2>
		<% current_user.reservations.each do |reservation| %>
		<%= reservation.listing.title %><br>
		<% end %>
		</div>
	</div>
</div>
